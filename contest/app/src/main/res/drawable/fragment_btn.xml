<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>

            <gradient android:startColor="#dc1a5fa6" android:endColor="#dc1a5fa6"

                android:angle="270" />
        </shape>

    </item>

    <item android:state_focused="true">

        <shape>

            <gradient android:startColor="#be7ecee9" android:endColor="#a262d7ef"

                android:angle="270" />

            <stroke android:width="1dip" android:color="#a7f403c9" />


        </shape>

    </item>

    <item>

        <shape>

            <gradient android:startColor="#9257cfd9" android:endColor="#9257cfd9"

                android:angle="-90" />
        </shape>

    </item>
</selector>